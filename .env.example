# PFF Emulator Watcher Configuration
# Copy this file to .env and fill in your actual credentials

# Supabase Configuration
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://zaljfpagjzndgudnyggu.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Claude API Configuration
# Get your API key from: https://console.anthropic.com/settings/keys
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# ADB Configuration (Optional)
# If you have multiple emulators, specify the device ID
# Get device ID by running: adb devices
# Example: ADB_DEVICE=emulator-5554
ADB_DEVICE=

# Watcher Settings
WATCH_INTERVAL=30  # seconds between screenshots
SCREENSHOT_DIR=./screenshots  # where to save screenshots
ENABLE_CHANGE_DETECTION=true  # only process when screen changes
